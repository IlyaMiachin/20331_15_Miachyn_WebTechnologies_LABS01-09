@using Miachyn.Domain.Entities

@* <h3 style="font-size: 30px; font-family: 'Times New Roman'"><b>Furniture Details</b></h3> *@

@if (Furniture != null)
{
    <div class="card mt-5" style="width: 18rem;">
        <img src="@Furniture.Image" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title" style="font-size: 20px; font-family: 'Times New Roman'">@Furniture.Name</h5>
            <p class="card-text" style="font-size: 20px; font-family: 'Times New Roman'">@Furniture.Description</p>
            <h4 class="badge bg-info" style="font-size: 20px; font-family: 'Times New Roman'">@Furniture.Price руб.</h4>
        </div>
    </div>
}

@code {
    [Parameter]
    public Furniture Furniture { get; set; }
    [Parameter]
    public EventCallback<Furniture> FurnitureChanged { get; set; }
}
