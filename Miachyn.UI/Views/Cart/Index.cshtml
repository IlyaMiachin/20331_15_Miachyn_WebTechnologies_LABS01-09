@using Miachyn.Domain.Models
@model Dictionary<int,CartItem>

<!-- список объектов -->
@if (Model.Count() == 0)
{
    <h2 class="m-2" style="font-size: 50px; font-family: 'Times New Roman'">Корзина пуста</h2>
}
else
{
    <h2 class="m-2" style="font-size: 50px; font-family: 'Times New Roman'">Ваша корзина:</h2>
    <table class="table table-striped">
        @foreach (var item in Model)
        {
            <tr style="font-size: 20px; font-family: 'Times New Roman'">
                <td><img src="@item.Value.Item.Image" width="200" /></td>
                <td>@item.Value.Item.Name</td>
                <td>@item.Value.Item.Description</td>
                <td>@item.Value.Qty</td>
                <td>
                    <a class="btn btn-danger"
                       asp-action="Remove"
                       asp-controller="cart"
                       asp-route-id="@item.Value.Item.Id">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </table>
}
