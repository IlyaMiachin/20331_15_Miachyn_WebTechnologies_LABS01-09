@page
@model Miachyn.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";

    int prev = Model.CurrentPage == 1
        ? 1
        : Model.CurrentPage - 1;
    int next = Model.CurrentPage == Model.TotalPages
    ? Model.TotalPages
    : Model.CurrentPage + 1;
}

<h1 style="font-size: 30px; font-family: 'Times New Roman'">Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary" style="font-size: 20px; font-family: 'Times New Roman'">
        <i class="fa-solid fa-plus"></i> Create New
    </a>
</p>
<table class="table" style="font-size: 15px; font-family: 'Times New Roman'">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Furniture[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Furniture[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Furniture[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Furniture[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Furniture[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Furniture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.Image" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-success">
                    <i class="fa-solid fa-pen-to-square"></i> Edit
                </a>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info ms-1 me-1">
                    <i class="fa-solid fa-info"></i> Details
                </a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="fa-regular fa-trash-can"></i> Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<pager admin="true"
       current-page="@Model.CurrentPage"
       total-pages="@Model.TotalPages">
</pager>
