@page
@model Miachyn.UI.Areas.Admin.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-size: 50px; font-family: 'Times New Roman'"><b>Create</b></h1>

<h4 style="font-size: 50px; font-family: 'Times New Roman'"><b>Furniture</b></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="font-size: 20px; font-family: 'Times New Roman'">
                <label asp-for="Furniture.Name" class="control-label"></label>
                <input asp-for="Furniture.Name" class="form-control" />
                <span asp-validation-for="Furniture.Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-size: 20px; font-family: 'Times New Roman'">
                <label asp-for="Furniture.Description" class="control-label"></label>
                <input asp-for="Furniture.Description" class="form-control" />
                <span asp-validation-for="Furniture.Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-size: 20px; font-family: 'Times New Roman'">
                <label asp-for="Furniture.Price" class="control-label"></label>
                <input asp-for="Furniture.Price" class="form-control" />
                <span asp-validation-for="Furniture.Price" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-size: 20px; font-family: 'Times New Roman'">
                <label asp-for="Furniture.Image" class="control-label"></label>
                <input asp-for="Furniture.Image" class="form-control" />
                <span asp-validation-for="Furniture.Image" class="text-danger"></span>
            </div>
            <div class="form-group" style="font-size: 20px; font-family: 'Times New Roman'">
                <label asp-for="Furniture.CategoryId" class="control-label">Category</label>
                <select asp-for="Furniture.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="mb-3" style="font-size: 20px; font-family: 'Times New Roman'">
                <label asp-for="Image" class="form-label" >Изображение</label>
                <input asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="font-size: 20px; font-family: 'Times New Roman'" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index" style="font-size: 20px; font-family: 'Times New Roman'">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
